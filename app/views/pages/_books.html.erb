<table class="table table-condensed">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Status</th>
    <th><%= link_to "<i class='fa fa-file fa-0'></i>".html_safe,  new_book_path, class: 'pull-right' %></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= book.availability %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      </tr>
  <% end %>
  </tbody>
</table>